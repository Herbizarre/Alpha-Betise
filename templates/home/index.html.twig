{% extends 'base.html.twig' %}

{% block title %}Alpha-Bétise
{% endblock %}

{% block body %}
	{# -----------------Caroussel---------------------- #}
	<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="/assets/images/slider3.png" alt="image d'enfant en pleine lecture">
				<div class="container">
					<div class="carousel-caption text-start">
						<h2>Achats en ligne.</h2>
						<p>Achetez l'article de vos rèves en quelques clics</p>
						<p>
							<a class="btn btn-lg btn-warning border-dark btn-outline-dark" href="#">Boutique</a>
						</p>
					</div>
				</div>
			</div>
			<div class="carousel-item">
				<img src="/assets/images/slider2.png" alt="image d'enfant en pleine lecture">
				<div class="container">
					<div class="carousel-caption">
						<h2>Livraison</h2>
						<p>Envoyez ou Reçevez vos achats où que vous soyez !</p>
						<p>
							<a class="btn btn-lg btn-warning border-dark btn-outline-dark" href="#">Livrer</a>
						</p>
					</div>
				</div>
			</div>
			<div class="carousel-item">
				<img src="/assets/images/slider1.png" alt="image d'enfant en pleine lecture">
				<div class="container">
					<div class="carousel-caption text-end">
						<h2>Ventes</h2>
						<p>Gagner de l'argent facilement en vendant vos objets</p>
						<p>
							<a class="btn btn-lg btn-warning border-dark btn-outline-dark" href="#">Ventes d'articles</a>
						</p>
					</div>
				</div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	{# -----------------------Prochain évenement----------------------- #}

	<div class="card mb-3 border-primary">
		<div class="row g-0">
			<div class="col-md-4 m-auto">
				<h2>Prochains évenements
				</h2>
				&nbsp; &nbsp;
				<h3>...........................................</h3>
			</div>
		</div>
	</div>


	{# ------------------- Apercu de livre ---------------- #}
	<div class="container-fluid">
		<div class="row">

			{% for book in books|slice(0,3)|reverse %}

				<div class=" card card-fluid mb-4 " style="max-width:900px; margin:auto; min-height:450px;">
					<div class="row">
						<div class="col-sm-5 ">
							<img src="/assets/uploads/book/{{book.couvertureBook}}" class="img-fluid rounded" alt="Image du livre {{ book.title }}" style="max-height:400px;">
							<center>
								<p class="card-text" style="font-size:1.9em;">
									<strong>{{ book.priceBook /100 }}&nbsp; €</strong>
								</p>
							</center>
							<br>
						</div>


						<div class="col-sm-7">
							<div class="card-body">
								<h3 class="card-title" style="font-size:2em;">{{ book.title | upper}}&nbsp;{{ book.rate }}</h3>
								<p class="card-text">
									<strong>{{book.author | upper}}</strong>
								</p>
								<p class="card-text">{{ book.commentLibraire|striptags|slice(0, 150)~ '...' }}</p>
								<p class="card-text">
									<a href="{{ path('app_details_book', {'id': book.id}) }}">
										<small class="text-muted">Plus de Détails>></small>
									</a>
								</p>
							</div>
						</div>


					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<center>
		<a href="/conseils">
			<button class="btn btn-outline-secondary my-2 my-sm-0">Afficher plus >></button>
		</a>
	</center><br>
{# --------------newsletter------------ #}
